.search-box{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 40rpx 20rpx 0;
  display: -webkit-flex;
  display: flex;
  flex-flow: column;
  -webkit-flex-flow: column;
}
.section{
  width: 100%;
}
.section label{
  width: 100%;
  display: -webkit-flex;
  display: flex;
  flex-flow: row nowrap;
  margin-bottom: 20rpx;
}
.section label text{
  padding-right: 10rpx;
}
.section label input{
  flex: 1;
  -webkit-flex:1;
}
.search-all{
  width: 100%;
  height: 100%;
  flex: 1;
  -webkit-flex:1;
}
.sear-item{
  width: 100%;
  height: 430rpx;
  display: -webkit-flex;
  display: flex;
  flex-flow: row nowrap;
  margin-bottom:30rpx; 
}
.sear-item image{
  flex: 1.2;
  -webkit-flex: 1.2;
  height: 430rpx;
}
.sear-text{
  flex: 2;
  -webkit-flex: 2;
  padding-left: 30rpx;
}
.sear-text text{
  display: block;
  padding-top: 10rpx;
  font-size: 14px;
  display: -webkit-box !important;
  word-break: break-all; 
  text-overflow: ellipsis;
  overflow: hidden;  
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
}
.sear-text text.ti{
  font-size: 16px;
  color: #666;
  font-weight: 900;
}
.sear-text text.pi{
  font-size: 16px;
  color: #f00;
  font-weight: 900;
}
.sear-text .jj{
  width: 100%;
  padding-top: 10rpx;
  font-size: 14px;
  color: #666;
  display: -webkit-box !important;
  word-break: break-all; 
  text-overflow: ellipsis;
  overflow: hidden;  
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.loading{
  text-align: center;
  height: 40px;
}